{% extends 'base.html.twig' %}

{% block title %}Fiche Etablissement{% endblock %}

  {% block contenu %}

    <div class="card" style="margin:15px;">
      <div class="card-header">
        <H1 style="text-align:center;">Fiche établissement</H1>
      </div>
      <div class="card-body">
        <h5 class="card-title">Informations generales</h5>
        {{ form_start(form) }}
        <div class="row">
         <div class="col-md-12">
          <div class="row">
           <div class="col-md-12">
             {{ form_row(form.nom, {'attr' : {'readonly' : true}} ) }}
           </div>
         </div>
       </div>
       <div class="col-md-12">
         <div class="row">
           <div class="col-md-2">
             {{ form_row(form.type, {'attr' : {'readonly' : true}} ) }}
           </div>
           <div class="col-md-10">
           </div>
         </div>
       </div>
       <div class="col-md-12">
         <div class="row">
          <div class="col-md-6">
            {{ form_row(form.adresse, {'attr' : {'readonly' : true}} ) }}
          </div>
          <div class="col-md-3">
            {{ form_row(form.codePostal, {'attr' : {'readonly' : true}} ) }}
          </div>
          <div class="col-md-3">
           {{ form_row(form.ville, {'attr' : {'readonly' : true}} ) }}
         </div>
       </div>
       <div class="row">
        <div class="col-md-6">
          {{ form_row(form.courriel, {'attr' : {'readonly' : true}} ) }}
        </div>
        <div class="col-md-3">
          {{ form_row(form.telephone, {'attr' : {'readonly' : true}} ) }}
        </div>
        <div class="col-md-3">
        </div>
      </div>
    </div>
  </div>
    {{ form_widget(form) }}
  {{ form_end(form) }}

  {# Récupération de l'id mise en session #}
  {% set id = app.session.get('id') %}
    
  <a href="{{ path('ConsulterEtablissement') }}">Retour à la liste</a><BR>
  <a href="{{ path('pdfFunctionEtablissement', {id: id} ) }}">Imprimer</a>
</div>
</div>

{% endblock %}
