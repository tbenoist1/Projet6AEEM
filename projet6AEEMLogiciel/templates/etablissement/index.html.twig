{% extends 'base.html.twig' %}

{% block title %}Etablissement index{% endblock %}

{% block body %}
    <h1>Etablissement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Courriel</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etablissement in etablissements %}
            <tr>
                <td>{{ etablissement.id }}</td>
                <td>{{ etablissement.nom }}</td>
                <td>{{ etablissement.type }}</td>
                <td>{{ etablissement.adresse }}</td>
                <td>{{ etablissement.codePostal }}</td>
                <td>{{ etablissement.ville }}</td>
                <td>{{ etablissement.courriel }}</td>
                <td>{{ etablissement.telephone }}</td>
                <td>
                    <a href="{{ path('etablissement_show', {'id': etablissement.id}) }}">show</a>
                    <a href="{{ path('etablissement_edit', {'id': etablissement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etablissement_new') }}">Create new</a>
{% endblock %}
