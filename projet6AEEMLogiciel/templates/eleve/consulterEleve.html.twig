{% extends 'base.html.twig' %}

{% block title %}Consulter Elève{% endblock %}

{% block contenu %}
     
    <div class="card" style="margin:15px;">
        <div class="card-header">
            <H1 style="text-align:center;">Consulter élève</H1>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-1">
                    </div>
                    <div class="col-md-1">
                        <h5>Trier par :</h5>
                    </div>
                    <div class="col-md-1">
                        <div class="dropdown">
                          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Niveau
                          </button>
                          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="{{ path('ConsulterEleve', {parametre:'Primaire'}) }}">Primaire</a>
                            <a class="dropdown-item" href="{{ path('ConsulterEleve', {parametre:"Collège"}) }}">Collège</a>
                            <a class="dropdown-item" href="{{ path('ConsulterEleve', {parametre:"Lycée"}) }}">Lycée</a>
                          </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Niveau</th>
                        <th>Lieu d'Intervention</th>
                        <th>
                    </tr>
                </thead>
                <tbody>
                {% for eleve in eleves %}
                    <tr>
                        <td>{{ eleve.nom }}</td>
                        <td>{{ eleve.prenom }}</td>
                        <td>{{ eleve.niveau }}</td>
                        <td>{{ eleve.lieuIntervention }}</td>
                        <td> 
                            <a href="{{ path('ConsulterEleveId', {'id': eleve.id}) }}">Consulter</a>                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas de valeurs trouvées</td>
                    </tr>
                 {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('GestionEleves') }}">Retour</a>
        </div>
    </div>            
{% endblock %}