{% extends 'base.html.twig' %}

{% block title %}Modifier Elève{% endblock %}

{% block contenu %}
 <div class="card" style="margin:15px;">
         <div class="card-header">
           <H1 style="text-align:center;">Modifier élève</H1>
       </div>
       <div class="card-body">
          {{ form_start(form) }}
          <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-1">
                        {{ form_row(form.couleur) }}
                    </div>
                    <div class="col-md-9">
                    </div>
                    <div class="col-md-2">
                        {{ form_row(form.anneeSuivie) }}
                    </div>
                </div><h5 class="card-title">Informations générales</h5>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="col-md-1">
                        {{ form_row(form.sexe) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.dateNaissance) }}
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                      {{ form_row(form.adresse) }}
                  </div>
              </div>
              <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.codePostal) }}
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    {{ form_row(form.villeDomicile) }}
                </div>
                <div class="col-md-5">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.courriel) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneO) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneS) }}
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.etablissement) }}               
                </div>
                <div class="col-md-3">
                    {{ form_row(form.niveau) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.classe) }}
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.dureeIntervention) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.lieuIntervention) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.contact) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-6">
                    {{ form_row(form.contactNum) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.dateDebut) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.dateFin) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.certificatMedical) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.ri) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.enveloppes) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.cheques) }}
                </div>
                <div class="col-md-4">
                </div>
            </div>
        </div>
    </div>
          {{ form_widget(form) }}

          <div class="container-fluid">
          	<div class="row">
          		<div class="col-md-11">
          		</div>
          		<div class="col-md-1">
          			<button class="btn btn-dark" style="pull-right">Enregistrer</button>
          		</div>
          	</div>
          </div>
      {{ form_end(form) }}
      <a href="{{ path('ModifierEleve') }}">Retour à la liste</a>
	  </div>
	</div>
{% endblock %}
