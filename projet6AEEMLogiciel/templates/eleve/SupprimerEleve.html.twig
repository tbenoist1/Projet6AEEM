{% extends 'base.html.twig' %}

{% block title %}Supprimer Eleve{% endblock %}

{% block contenu %}
     
    <div class="card" style="margin:15px;">
        <div class="card-header">
            <H1>Supprimer élève</H1>
            <H1 style="text-align:center;">Supprimer élève</H1>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Classe</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for eleve in eleves %}
                    <tr>
                        <td>{{ eleve.nom }}</td>
                        <td>{{ eleve.prenom }}</td>
                        <td>{{ eleve.classe }}</td>
                        <td>
                            {{ include('eleve/_delete_form.html.twig') }}
                            {{ include('eleve/SupprimerEleveId.html.twig') }}
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas de valeurs trouvées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('GestionEleves') }}">Retour</a>
        </div>
    </div>            
{% endblock %}