{% extends 'base.html.twig' %}

{% block title %}Ajout Eleve{% endblock %}

{% block contenu %}

	<div class="card" style="margin:15px;">
	  <div class="card-header">
	    <H1 style="text-align:center;">Ajouter élève</H1>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Informations générales</h5>
      {{ form_start(form) }}
      <div class="row">
    		<div class="col-md-12">
    			<div class="row">
    				<div class="col-md-4">
            {{ form_row(form.nom) }}
    				</div>
    				<div class="col-md-4">
            {{ form_row(form.prenom) }}
    				</div>
    				<div class="col-md-1">
            {{ form_row(form.sexe) }}
    				</div>
            <div class="col-md-3">
            {{ form_row(form.dateNaissance) }}
    				</div>
    			</div>
        </div>
          {{ form_widget(form) }}
          <button class="btn btn-dark" style="button-align:right;">Enregistrer</button>
      {{ form_end(form) }}
	  </div>
	</div>

{% endblock %}
