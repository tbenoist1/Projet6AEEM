{% extends 'base.html.twig' %}

{% block title %}Eleve index{% endblock %}

{% block body %}
    <h1>Eleve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>DateNaissance</th>
                <th>AnneeSuivie</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>VilleDomicile</th>
                <th>Courriel</th>
                <th>TelephoneO</th>
                <th>TelephoneS</th>
                <th>Niveau</th>
                <th>Classe</th>
                <th>DureeIntervention</th>
                <th>LieuIntervention</th>
                <th>Contact</th>
                <th>ContactNum</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>CertificatMedical</th>
                <th>Ri</th>
                <th>Enveloppes</th>
                <th>Cheques</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.id }}</td>
                <td>{{ eleve.nom }}</td>
                <td>{{ eleve.prenom }}</td>
                <td>{{ eleve.sexe }}</td>
                <td>{{ eleve.dateNaissance ? eleve.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.anneeSuivie }}</td>
                <td>{{ eleve.adresse }}</td>
                <td>{{ eleve.codePostal }}</td>
                <td>{{ eleve.villeDomicile }}</td>
                <td>{{ eleve.courriel }}</td>
                <td>{{ eleve.telephoneO }}</td>
                <td>{{ eleve.telephoneS }}</td>
                <td>{{ eleve.niveau }}</td>
                <td>{{ eleve.classe }}</td>
                <td>{{ eleve.dureeIntervention }}</td>
                <td>{{ eleve.lieuIntervention }}</td>
                <td>{{ eleve.contact }}</td>
                <td>{{ eleve.contactNum }}</td>
                <td>{{ eleve.dateDebut ? eleve.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.dateFin ? eleve.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.certificatMedical ? 'Yes' : 'No' }}</td>
                <td>{{ eleve.ri ? 'Yes' : 'No' }}</td>
                <td>{{ eleve.enveloppes ? 'Yes' : 'No' }}</td>
                <td>{{ eleve.cheques ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
                    <a href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('eleve_new') }}">Create new</a>
{% endblock %}
