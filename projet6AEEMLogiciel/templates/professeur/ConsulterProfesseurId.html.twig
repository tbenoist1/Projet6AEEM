    {% extends 'base.html.twig' %}

    {% block title %}Fiche Professeur{% endblock %}

        {% block contenu %}

           <div class="card" style="margin:15px;">
            <div class="card-header">
                <H1 style="text-align:center;">Fiche professeur</H1>
            </div>
            <div class="card-body">
                <h5 class="card-title">Informations generales</h5>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.nom, {'attr' : {'readonly' : true}} ) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.prenom, {'label' : "Prénom", 'attr' : {'readonly' : true}} ) }}
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                      {{ form_row(form.adresse, {'attr' : {'readonly' : true}} ) }}
                  </div>
              </div>
              <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.codePostal, {'label' : "Code Postal", 'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    {{ form_row(form.villeDomicile, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-5">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.courriel, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneO, {'label' : "Telephone Obligatoire", 'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneS, {'label' : "Telephone Optionnel", 'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.situationActuelle, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.matiere1, {'label' : "Matiere(s)", 'attr' : {'readonly' : true}} ) }}
                    {{ form_row(form.matiere2, {'label' : " ", 'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.niveau, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.zonesInterventions, {'label' : "Zone(s) d'intervention", 'attr' : {'readonly' : true}} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.lieuxInterventions, {'label' : "Lieu(x) d'intervention", 'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.toutesMaladies, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.voiture, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.cv, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.cj, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-8">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.commentaires, {'attr' : {'readonly' : true}} ) }}
                </div>
            </div>
                {{ form_widget(form) }}
            {{ form_end(form) }}
            
            {# Récupération de l'id mise en session #}
            {% set id = app.session.get('id') %}

            <a href="{{ path('ConsulterProfesseur') }}">Retour à la liste</a><BR>
            <a href="{{ path('pdfFunctionProfesseur', {id: id} ) }}">Imprimer</a>

        </div>
    </div>
</div>
</div>
{% endblock %}
