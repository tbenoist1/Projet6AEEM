    {% extends 'base.html.twig' %}

    {% block title %}Professeur{% endblock %}

        {% block contenu %}

           <div class="card" style="margin:15px;">
            <div class="card-header">
                <H1 style="text-align:center;">Consulter professeur</H1>
            </div>
            <div class="card-body">
                <h5 class="card-title">Informations générales</h5>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.nom, {'attr' : {'readonly' : true}} ) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.prenom, {'attr' : {'readonly' : true}} ) }}
                    </div>
                    <div class="col-md-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                      {{ form_row(form.adresse, {'attr' : {'readonly' : true}} ) }}
                  </div>
              </div>
              <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.codePostal, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-3">
                    {{ form_row(form.villeDomicile, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-5">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.courriel, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneO, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.telephoneS, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.situationActuelle, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.matiere1, {'attr' : {'readonly' : true}} ) }}
                    {{ form_row(form.matiere2, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.niveau, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.zonesInterventions, {'attr' : {'readonly' : true}} ) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.lieuxInterventions, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.toutesMaladies, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.voiture, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-6">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    {{ form_row(form.cv, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.cj, {'attr' : {'readonly' : true}} ) }}
                </div>
                <div class="col-md-8">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.commentaires, {'attr' : {'readonly' : true}} ) }}
                </div>
            </div>
            
            {{ form_widget(form) }}
            {{ form_end(form) }}
            <a href="{{ path('ConsulterProfesseur') }}">Retour à la liste</a>
        </div>
    </div>
</div>
</div>
{% endblock %}
