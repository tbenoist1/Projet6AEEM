{% extends 'base.html.twig' %}

{% block title %}Modifier Mairie{% endblock %}

{% block contenu %}
</div>
	<div class="card" style="margin:15px;">
	  <div class="card-header">
	    <H1 style="text-align:center;">Modifier mairie</H1>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Informations générales</h5>
      {{ form_start(form) }}
      <div class="row">
    		<div class="col-md-12">
    			<div class="row">
    				<div class="col-md-6">
            {{ form_row(form.ville) }}
    				</div>
    				<div class="col-md-3">
            {{ form_row(form.codePostal, {'label' : "Code Postal"}) }}
    				</div>
    				<div class="col-md-3">
            {{ form_row(form.zone) }}
    				</div>
    			</div>
        </div>
        <div class="col-md-12">
			     <div class="row">
				      <div class="col-md-6">
              {{ form_row(form.lienDossier) }}
				      </div>
				      <div class="col-md-6">
				      </div>
			     </div>
		     </div>
         <div class="col-md-12">
     			<div class="row">
     				<div class="col-md-6">
             {{ form_row(form.courriel) }}
     				</div>
     				<div class="col-md-3">
             {{ form_row(form.telephone, {'label' : "Téléphone"}) }}
     				</div>
     				<div class="col-md-3">
     				</div>
     			</div>
    		</div>
    	</div>
          {{ form_widget(form) }}

          <div class="container-fluid">
          	<div class="row">
          		<div class="col-md-11">
          		</div>
          		<div class="col-md-1">
          			<button class="btn btn-dark" style="pull-right">Enregistrer</button>
          		</div>
          	</div>
          </div>
      {{ form_end(form) }}
      <a href="{{ path('ModifierMairie') }}">Retour à la liste</a>
	  </div>
	</div>
{% endblock %}
