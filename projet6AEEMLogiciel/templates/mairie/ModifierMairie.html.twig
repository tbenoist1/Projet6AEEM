{% extends 'base.html.twig' %}

{% block title %}Modifier Mairie{% endblock %}

{% block contenu %}
     
    <div class="card" style="margin:15px;">
        <div class="card-header">
            <H1 style="text-align:center;">Modifier mairie</H1>
            <h6>Trier par :</h6>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Zone
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="{{ path('ConsulterMairie', { zone:'BAB'}) }}">BAB</a>
                <a class="dropdown-item" href="{{ path('ConsulterMairie',{zone:"Pays Basque Intérieur"}) }}">Pays Basque Intérieur</a>
                <a class="dropdown-item" href="{{ path('ConsulterMairie',{zone:"Sud Pays Basque"}) }}">Sud Pays Basque</a>
                <a class="dropdown-item" href="{{ path('ConsulterMairie',{zone:"Sud Landes"}) }}">Sud Landes</a>
              </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ville</th>
                        <th>Zone</th>
                        <th>LienDossier</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for mairie in mairies %}
                    <tr>
                        <td>{{ mairie.ville }}</td>
                        <td>{{ mairie.zone }}</td>
                        <td>{{ mairie.lienDossier }}</td>
                        <td>
                    <a href="{{ path('ModifierMairieId', {'id': mairie.id}) }}">Modifier</a>

                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Pas de valeurs trouvées</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('GestionSubventions') }}">Retour</a>

        </div>
    </div>            
{% endblock %}