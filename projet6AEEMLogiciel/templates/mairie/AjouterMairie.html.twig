{% extends 'base.html.twig' %}

{% block title %}Ajout Mairie{% endblock %}

{% block contenu %}

	<div class="card" style="margin:15px;">
	  <div class="card-header">
	    <H1 style="text-align:center;">Ajouter mairie</H1>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title">Informations générales</h5>
      {{ form_start(form) }}
      <div class="row">
    		<div class="col-md-12">
    			<div class="row">
    				<div class="col-md-6">
            {{ form_row(form.ville) }}
    				</div>
    				<div class="col-md-3">
            {{ form_row(form.codePostal) }}
    				</div>
    				<div class="col-md-3">
            {{ form_row(form.zone) }}
    				</div>
    			</div>
        </div>
        <div class="col-md-12">
			     <div class="row">
				      <div class="col-md-6">
              {{ form_row(form.lienDossier) }}
				      </div>
				      <div class="col-md-6">
				      </div>
			     </div>
		     </div>
         <div class="col-md-12">
     			<div class="row">
     				<div class="col-md-6">
             {{ form_row(form.courriel) }}
     				</div>
     				<div class="col-md-3">
             {{ form_row(form.telephone) }}
     				</div>
     				<div class="col-md-3">
     				</div>
     			</div>
    		</div>
    	</div>
          {{ form_widget(form) }}
          <button class="btn btn-dark" style="button-align:right;">Enregistrer</button>
      {{ form_end(form) }}
	  </div>
	</div>

{% endblock %}
